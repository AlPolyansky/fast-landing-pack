header.header
  .container
    .header__block
    h1.logo
      //removeIf(mobile)
      .logo__part.only-desktop-t
        img.logo__img(src!="img/desktop/logo.png" alt!="")
      //endRemoveIf(mobile)
      .logo__part
        span.logo__text NANO 
        span.logo__text SAPPHIRE
    h2.toptitle
      span.toptitle__top Надежный щит
      span.toptitle__bottom Для твоего гаджета
    //removeIf(mobile)
    .skills.only-desktop
      .skills__part
        ul.list
          li.list__item
            .list__part
              i.ico.i-mark
            .list__part
              p.text #[b.t--imp.t--bold.t--block Защищает экран] при падении и ударах
          li.list__item
            .list__part
              i.ico.i-mark
            .list__part
              p.text Удаляет и  #[b.t--imp.t--bold.t--block предовращает царапины]
      .skills__part
        ul.list
          li.list__item
            .list__part
              i.ico.i-mark
            .list__part
              p.text #[b.t--imp.t--bold.t--block Улучшает работу] Touch screen
          li.list__item
            .list__part
              i.ico.i-mark
            .list__part
              p.text Упаковки хватит #[b.t--imp.t--bold.t--block на 10 экранов]
    //endRemoveIf(mobile)
    .header__grid
      .header__part
        //removeIf(mobile)
        .form__wrap.only-desktop
          form.form(method!='POST' action!='#')
            .form__title Оформление заказа
            .form__inner
              .form__field-wrap
                .field
                  .field__select-wrap
                    .field__arrow
                    select#country_code_selector.field__select.field__part(name!='country_code')
                      option(value!='RU') Россия
                .field
                  input.field__input.field__part(type!='text' name!='name' placeholder!='Ваше имя')
                .field
                  input.field__input.field__part.only_number(type!='text' name!='phone' placeholder!='Номер телефона')
                .field.field__info
                  .field__row
                    .field__text.field__label Доставка:
                    .field__number.field__label {{ shipment_price }} {{ currency }}
                  .field__row
                    .field__text.field__label Итого:
                    .field__number.field__label {{ total_price|int }} {{ currency }}
              .button
                button.button__text.js_submit  
                  | Заказать Сейчас
        //endRemoveIf(mobile)
      .header__part
        .sale__wrap
          .prod
            //removeIf(desktop)
            img.prod__img.only-mobile(src!="img/prod.png" alt!="")
            //endRemoveIf(desktop)
            //removeIf(mobile)
            img.prod__img.only-desktop(src!="img/desktop/prod.png" alt!="")
            //endRemoveIf(mobile)
          .sale
            span.angle.angle__left.only-mobile
              svg(version!='1.1' xml:space!='preserve' viewbox!='0 0 100 100' preserveaspectratio!='none')
                polygon(points!='0,50 30,0 100,0 50,100  30,100')
                defs
                  linearGradient#arrowGradient-left(x1!="100%" x2!="0" y1!="100%" y2!="0")
                    stop.sale__stop-1(offset!="5%")
                    stop.sale__stop-2(offset!="95%")
            span.angle.angle__right.only-desktop
              svg(version!='1.1' xml:space!='preserve' viewbox!='0 0 100 100' preserveaspectratio!='none')
                polygon(points!='0,0 60,0 100,50 60,100 30,100')
                defs
                  linearGradient#arrowGradient-right(x1!="25%" y1!="0%" x2!="75%" y2!="100%")
                    stop(offset!="0%" style!="stop-color:rgb(253,83,117);stop-opacity:1")
                    stop(offset!="49%" style!="stop-color:rgb(251,58,96);stop-opacity:1")
                    stop(offset!="100%" style!="stop-color:rgb(251,52,91);stop-opacity:1")
            .sale__inner
              .sale__part
                p.sale__num 50
              .sale__part
                p.sale__perc %
                p.sale__text скидка
        .price
          del.price__item.price__old  
            | {{old_price}}
            span.price__cur {{currency}}
          p.price__item.price__new
            | {{price}}
            span.price__cur {{currency}}
