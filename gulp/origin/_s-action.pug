      .feat
        h3.feat__title Осветление эмали
        .feat__photo.only-mobile.photo.photo-11
        .grid-D.feat__grid
          .part-D.feat__item
            .feat__head
              .grid-M.feat__head-grid
                .part-M.feat__head-part
